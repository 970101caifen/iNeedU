    <link rel="stylesheet" href="css/amazeui.min.css" />
    <link rel="stylesheet" href="css/admin.css">
    <link rel="stylesheet" href="css/app.css">
</head>

<body data-type="generalComponents">


    <header class="am-topbar am-topbar-inverse admin-header">
        <div class="am-topbar-brand">
            <a href="javascript:;" class="tpl-logo">
                <img src="img/logo.png" alt="">
            </a>
        </div>
        <div class="am-icon-list tpl-header-nav-hover-ico am-fl am-margin-right">

        </div>

        <button class="am-topbar-btn am-topbar-toggle am-btn am-btn-sm am-btn-success am-show-sm-only" data-am-collapse="{target: '#topbar-collapse'}"><span class="am-sr-only">导航切换</span> <span class="am-icon-bars"></span></button>

        <div class="am-collapse am-topbar-collapse" id="topbar-collapse">

            <ul class="am-nav am-nav-pills am-topbar-nav am-topbar-right admin-header-list tpl-header-list">
                <li class="am-hide-sm-only"><a href="javascript:;" id="admin-fullscreen" class="tpl-header-list-link"><span class="am-icon-arrows-alt"></span> <span class="admin-fullText">开启全屏</span></a></li>

                <li class="am-dropdown" data-am-dropdown data-am-dropdown-toggle>
                    <a class="am-dropdown-toggle tpl-header-list-link" href="javascript:;">
                        <span class="tpl-header-list-user-nick"><%=loginName.name%></span><span class="tpl-header-list-user-ico"> <img src="img/user01.png"></span>
                    </a>
                    <ul class="am-dropdown-content">
                        <li><a href="#"><span class="am-icon-bell-o"></span> 资料</a></li>
                        <li><a href="#"><span class="am-icon-cog"></span> 设置</a></li>
                        <li><a href="/logout"><span class="am-icon-power-off"></span> 退出</a></li>
                    </ul>
                </li>
                <li><a href="#" class="tpl-header-list-link"><span class="am-icon-sign-out tpl-header-list-ico-out-size"></span></a></li>
            </ul>
        </div>
    </header>







    <div class="tpl-page-container tpl-page-header-fixed">
        <div class="tpl-left-nav tpl-left-nav-hover">
            <div class="tpl-left-nav-title">
                i Need U 列表
            </div>
            <div class="tpl-left-nav-list">
                <ul class="tpl-left-nav-menu">
                    <li class="tpl-left-nav-item">
                        <a href="index" class="nav-link">
                            <i class="am-icon-home"></i>
                            <span>首页</span>
                        </a>
                    </li>
                    <li class="tpl-left-nav-item">
                        <a href="chart" class="nav-link tpl-left-nav-link-list">
                            <i class="am-icon-bar-chart"></i>
                            <span>数据展示</span>
                            <i class="tpl-left-nav-content tpl-badge-danger">
               12
             </i>
                        </a>
                    </li>

                    <li class="tpl-left-nav-item">
                        <!-- 打开状态 a 标签添加 active 即可   -->
                        <a href="javascript:;" class="nav-link tpl-left-nav-link-list active">
                            <i class="am-icon-table"></i>
                            <span>数据管理</span>
                            <!-- 列表打开状态的i标签添加 tpl-left-nav-more-ico-rotate 图表即90°旋转  -->
                            <i class="am-icon-angle-right tpl-left-nav-more-ico am-fr am-margin-right tpl-left-nav-more-ico-rotate"></i>
                        </a>
                        <ul class="tpl-left-nav-sub-menu" style="display:block">
                            <li>

                                <a href="table-font-list">
                                    <i class="am-icon-angle-right"></i>
                                    <span>团队管理</span>
                                    <i class="am-icon-star tpl-left-nav-content-ico am-fr am-margin-right"></i>
                                </a>

                                <a href="table-images-list">
                                    <i class="am-icon-angle-right"></i>
                                    <span>普通用户管理</span>
                                    <i class="tpl-left-nav-content tpl-badge-success">
               18
             </i>

                                    <a href="form-news">
                                        <i class="am-icon-angle-right"></i>
                                        <span>活动类别管理</span>
                                        <i class="tpl-left-nav-content tpl-badge-primary">
               5
             </i>

                                        <!-- 打开状态 a 标签添加 active 即可   -->
                                        <a href="form-news-list" class="active">
                                            <i class="am-icon-angle-right"></i>
                                            <span>活动管理</span>

                                        </a>
                            </li>
                        </ul>
                    </li>

                    <li class="tpl-left-nav-item">
                        <a href="javascript:;" class="nav-link tpl-left-nav-link-list">
                            <i class="am-icon-wpforms"></i>
                            <span>详情展示</span>
                            <i class="am-icon-angle-right tpl-left-nav-more-ico am-fr am-margin-right"></i>
                        </a>
                        <ul class="tpl-left-nav-sub-menu">
                            <li>
                                <a href="#">
                                    <i class="am-icon-angle-right"></i>
                                    <span>团队信息显示</span>
                                    <i class="am-icon-star tpl-left-nav-content-ico am-fr am-margin-right"></i>
                                </a>
                                <a href="#">
                                    <i class="am-icon-angle-right"></i>
                                    <span>个人信息显示</span>
                                    <i class="am-icon-star tpl-left-nav-content-ico am-fr am-margin-right"></i>
                                </a>
                                <a href="#">
                                    <i class="am-icon-angle-right"></i>
                                    <span>活动详情显示</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>




        <div class="tpl-content-wrapper">
            <div class="tpl-content-page-title">
                i Need U 表单
            </div>
            <ol class="am-breadcrumb">
                <li><a href="index" class="am-icon-home">首页</a></li>
                <li><a href="#">数据管理</a></li>
                <li class="am-active">活动管理</li>
            </ol>
            <div class="tpl-portlet-components">
                <div class="portlet-title">
                    <div class="caption font-green bold">
                        <span class="am-icon-code"></span> 活动管理
                    </div>
                </div>
                <div class="tpl-block">
                    <div class="am-g">
                        <div class="am-u-sm-12">
                            <form class="am-form">
                                <table class="am-table am-table-striped am-table-hover table-main">
                                    <thead>
                                    <tr>
                                        <th class="table-check"><input type="checkbox" class="tpl-table-fz-check"></th>
                                        <th class="table-id">ID</th>
                                        <th class="table-title">活动名称</th>
                                        <th class="table-type">活动地点</th>
                                        <th class="table-author am-hide-sm-only">发布团队</th>
                                        <th class="table-date am-hide-sm-only">参与人数</th>
                                        <th class="table-date am-hide-sm-only">发布状态</th>
                                        <th class="table-set">操作</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr>
                                        <%returndata.array.forEach(function (item){%>
                                        <td><input type="checkbox" value="<%=item.activity_id%>"></td>
                                        <td><%=item.activity_id;%></td>
                                        <td><a href="#"><%=item.activity_title%></a></td>
                                        <td><%=item.activity_site%></td>
                                        <td class="am-hide-sm-only"><%=item.team_name%></td>
                                        <td class="am-hide-sm-only"><%=item.activity_registration_numbers+'/'+item.activity_need_numbers%></td>
                                        <td class="am-hide-sm-only"><%=item.activity_state==0?'禁用':'活跃'%></td>
                                        <td>
                                            <div class="am-btn-toolbar">
                                                <div class="am-btn-group am-btn-group-xs">
                                                    <button type="button" onclick="detailState(<%=item.activity_id%>)" class="detail am-btn am-btn-default am-btn-xs am-text-secondary">查看详情</button>
                                                    <button type="button" onclick="allowState(<%=item.activity_id%>)" class="allow am-btn am-btn-default am-btn-xs am-text-danger am-hide-sm-only"><span class="am-icon-pencil-square-o"></span> 解禁</button>
                                                    <button type="button" onclick="forbidState(<%=item.activity_id%>)" class="forbid am-btn am-btn-default am-btn-xs am-text-danger am-hide-sm-only"><span class="am-icon-trash-o"></span>禁用</button>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                    <%})%>

                                    </tbody>
                                </table>
                                <div class="am-cf">

                                    <div class="am-fr">
                                        <ul class="am-pagination tpl-pagination">
                                            <%var page=returndata.page;%>

                                            <li class="am-disabled"><a href="/form-news-list?page=<%=((page-1) <= 0 ? 1 : (page-1))%>">«</a></li>
                                            <!--<li class="am-active"><a href="#">1</a></li>-->
                                            <!--<li><a href="#">2</a></li>-->
                                            <!--<li><a href="#">3</a></li>-->
                                            <!--<li><a href="#">4</a></li>-->
                                            <!--<li><a href="#">5</a></li>-->
                                            <% var totalshow=3;%>
                                            <% var totalpage=returndata.totalpage;%>
                                            <% var start =page - (totalshow-1)/2;%>
                                            <% if(start < 1) start = 1;%>
                                            <%var end = start + totalshow - 1;%>
                                            <% if(end > totalpage){%>
                                            <%     end  = totalpage;%>
                                            <%start  = totalpage-totalshow + 1;%>
                                            <%if(start < 1) start = 1;%>
                                            <%}%>
                                            <% for(var i=start; i <= end; i++){%>
                                            <li><a href="/form-news-list?page=<%=i%>">
                                                    <%=i%>
                                                </a></li>
                                            <%}%>
                                            <li><a href="/form-news-list?page=<%=((page+1) > totalpage ? totalpage : (page+1))%>">»</a></li>
                                        </ul>
                                    </div>
                                </div>
                                <hr>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="js/jquery.min.js"></script>
    <script src="js/amazeui.min.js"></script>
    <script src="js/app.js"></script>
    <script>

        function detailState(e){
            var url='http://localhost:8888/form-line?activity_id='+e;
            window.location.href=url;
        }
        function allowState(e){
            if(window.confirm("确定要解禁该活动吗？")) {
                var url = 'http://localhost:8888/allow_activity?activity_id=' + e;
                $.ajax({
                    url: url,
                    type: 'GET',
                    dataType: 'JSON',
                }).done(function (data) {
                    if(data=='1') {
                        window.location.href = 'http://localhost:8888/form-news-list';
                    }
                });
            }else{
                return false;
            }
        }
        function forbidState(e){
            if(window.confirm("确定要禁用该活动吗？")) {
                var url = 'http://localhost:8888/forbid_activity?activity_id=' + e;
                $.ajax({
                    url: url,
                    type: 'GET',
                    dataType: 'JSON',
                }).done(function (data) {
                    if(data=='1') {
                        window.location.href = 'http://localhost:8888/form-news-list';
                    }
                });
            }else{
                return false;
            }
        }
        //    )
    </script>
</body>

</html>